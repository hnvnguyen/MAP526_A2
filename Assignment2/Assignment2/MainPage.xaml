             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment2.MainPage">
    <NavigationPage.TitleView>
        <Label Text="Planetary Bodies"
               HorizontalTextAlignment="Center" 
               TextColor="White" 
               FontSize="36"/>
    </NavigationPage.TitleView>

    <StackLayout  Background="Black">
        <Image Source="https://cdn.eso.org/images/screen/eso1528c.jpg"></Image>
        <StackLayout VerticalOptions="CenterAndExpand" >
        <Button
                Text="All Planetary Bodies"
                CornerRadius="10"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"
                BackgroundColor="#2196F3"
                TextColor="White"
                Clicked="AllBodiesPage_Clicked"></Button>
        <Button
                Text="Picture of the Day!"
                CornerRadius="10"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="#2196F3"
                TextColor="White"
                Clicked="PictureOfDayPage_Clicked"></Button>
        <Button
                Text="Your Favourites"
                CornerRadius="10"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"
                BackgroundColor="#2196F3"
                TextColor="White"
                Clicked="FavouritesPage_Clicked"></Button>
        </StackLayout>

